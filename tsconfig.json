{
  "compilerOptions": {
    "target": "ES6",
    "module": "system",
    "sourceMap": false,
    "outDir": "./src/js",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noEmitOnError": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/ts/**/*"
  ]
}